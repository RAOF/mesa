+static void connection_callback(MirConnection *conn, void *context)
+{
+   struct dri2_egl_display *dri2_dpy = context;
+
+   dri2_dpy->mir_disp = (MirMesaEGLNativeDisplay *)mir_connection_get_egl_native_display(conn);
+}
